@using Gym.Client.Components.Layout
@using Microsoft.AspNetCore.Components.Authorization
@inject NavigationManager Navigation
<CascadingAuthenticationState>
    <Router AppAssembly="@typeof(App).Assembly">
        <Found Context="routeData">
            <AuthorizeRouteView RouteData="@routeData" DefaultLayout="@typeof(MainLayout)">
                <NotAuthorized>
                    <MudContainer Class="mt-10">
                        <MudPaper Class="p-6 shadow-md rounded-xl text-center">
                            <MudText Typo="Typo.h5" Class="text-danger font-bold">
                                🚫 Access Denied
                            </MudText>
                            <MudButton Variant="Variant.Filled" OnClick="@(() => Navigation.NavigateTo("/"))">
                                Go to Login
                            </MudButton>
                        </MudPaper>
                    </MudContainer>
                </NotAuthorized>
            </AuthorizeRouteView>
        </Found>
        <NotFound>
            <LayoutView Layout="@typeof(MainLayout)">
                <p>Sorry, there's nothing at this address.</p>
            </LayoutView>
        </NotFound>
    </Router>
</CascadingAuthenticationState>

