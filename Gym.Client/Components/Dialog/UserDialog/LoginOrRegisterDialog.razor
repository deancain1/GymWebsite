<MudDialog MaxWidth="MaxWidth.ExtraSmall" Class="rounded-2xl shadow-lg bg-white">
    <DialogContent>
        <div class="flex flex-col items-center text-center py-6 px-4 space-y-4">
            <!-- Icon -->
            <MudIcon Icon="@Icons.Material.Filled.Lock" Color="Color.Dark" Size="Size.Large" />

            <!-- Message -->
            <p class="text-xl font-bold text-gray-800">You need to log in</p>
            <p class="text-md text-gray-600">or register before applying</p>

            <!-- Buttons -->
            <div class="flex flex-col gap-3 w-full mt-4">
                <MudButton Color="Color.Warning"
                           Variant="Variant.Filled"
                           FullWidth="true"
                           Size="Size.Medium"
                           OnClick="@GoToLogin">
                    <MudIcon Icon="@Icons.Material.Filled.Login" Class="mr-2" /> Login
                </MudButton>

                <MudButton Color="Color.Dark"
                           Variant="Variant.Filled"
                           FullWidth="true"
                           Size="Size.Medium"
                           OnClick="@GoToRegister">
                    <MudIcon Icon="@Icons.Material.Filled.PersonAdd" Class="mr-2" /> Register
                </MudButton>
            </div>
        </div>
    </DialogContent>
</MudDialog>

@code {
    [CascadingParameter] IMudDialogInstance MudDialog { get; set; } = default!;
    [Inject] NavigationManager Navigation { get; set; } = default!;

    void GoToLogin()
    {
        MudDialog.Close();
        Navigation.NavigateTo("/login?returnUrl=/");
    }

    void GoToRegister()
    {
        MudDialog.Close();
        Navigation.NavigateTo("/register?returnUrl=/");
    }
}
