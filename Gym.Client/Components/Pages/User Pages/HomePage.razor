@page "/"
@inherits HomePageBase
@layout HomePageLayout

<header class=" bg-gradient-to-r from-[#661F1F] via-[#2B1F1F] to-[#000000] shadow-md  fixed w-full py-5 z-50">
   
    <div class="absolute left-6 top-1/2 my-1 -translate-y-1/2 ">
        <MudButton Variant="Variant.Filled"
                   Color="Color.Warning"
                   Size="Size.Large"
                   Class="hidden sm:inline-block mb-2 bg-yellow-50"
                   Href="/login">
            Login
        </MudButton>
       
        <button class="sm:hidden text-white text-2xl focus:outline-none  " @onclick="ToggleMenu">
            <MudIcon Icon="@Icons.Material.Filled.Menu" />
        </button>
    </div>
    <nav class="hidden sm:flex justify-content-end px-5 gap-6">
        <a href="#home" class="text-white text-lg font-semibold px-4 py-2 rounded-full hover:bg-yellow-500  transition duration-300">Home</a>
        <a href="#services" class="text-white text-lg font-semibold px-4 py-2 rounded-full hover:bg-yellow-500  transition duration-300">Choose us</a>
        <a href="#contact" class="text-white text-lg font-semibold px-4 py-2 rounded-full hover:bg-yellow-500   transition duration-300">Contact</a>
    </nav>
   
</header>
@if (isMenuOpen)
{
    <nav class="md:hidden bg-gray-800 flex flex-col items-center py-10 transition-all duration-300 w-full ">
        <a href="#home" class="text-white text-lg font-semibold px-4 py-3 w-full border-b border-gray-700"> Home</a>
        <a href="#services" class="text-white text-lg font-semibold px-4 py-3 w-full border-b border-gray-700"> Choose us</a>
        <a href="#contact" class="text-white text-lg font-semibold px-4 py-3 w-full border-b border-gray-700"> Contact</a>

        <MudButton Variant="Variant.Filled"
                   Color="Color.Warning"
                   Size="Size.Medium"
                   Class="mt-4 w-11/12"
                   Href="/login">
            Login
        </MudButton>
    </nav>
}


<section id="home" class="w-full py-40 md:py-32 flex bg-gradient-to-r from-[#661F1F] via-[#2B1F1F] to-[#000000]">
    <div class="flex flex-col md:flex-row items-center w-full h-full px-6">
        <div class="lg:w-1/2 lg:text-left md:w-full md:text-center">
            <h4 class="text-4xl md:text-6xl text-white font-extrabold mb-6 drop-shadow-lg">
                Welcome to Power Gym
            </h4>
            <p class="text-lg md:text-2xl text-gray-100 mb-4 max-w-2xl">
                Power Gym is more than a gym—it’s a home for strength, discipline, and transformation.
            </p>
            <p class="text-base md:text-xl text-gray-200 mb-8 max-w-2xl ">
                Fitness isn’t just what we do—it’s our only addiction.
            </p>
            <div class=" px-6 md:px-8 py-3">
                <button class="w-full md:w-auto bg-white text-[#661F1F] px-6 md:px-8 py-3 rounded-full font-semibold shadow-lg hover:bg-gray-100 transition transform hover:scale-105"
                        @onclick="OpenDialogAsync">
                    Apply Now!
                </button>
            </div>
        </div>

        <div class="w-full mt-5 md:1/2 lg:w-1/2 mt-lg-0">
            <MudCarousel TData="object"
                         Class="h-96 md:h-[400px] w-full mx-auto rounded-lg"
                         ShowArrows="@arrows"
                         EnableSwipeGesture="@enableSwipeGesture"
                         AutoCycle="@autocycle"
                         Style="">
                <MudCarouselItem>
                    <img src="/images/gyminterior.jpg" alt="Sign In" class="w-full h-full object-cover rounded-lg" />
                </MudCarouselItem>
                <MudCarouselItem>
                    <img src="/images/fitnessarea.jpg" alt="User Login" class="w-full h-full object-cover rounded-lg" />
                </MudCarouselItem>
                <MudCarouselItem>
                    <img src="/images/group.jpg" alt="DHVSU Logo" class="w-full  h-full object-cover rounded-lg" />
                </MudCarouselItem>
            </MudCarousel>
        </div>
    </div>
</section>



<section id="services" class="py-20 bg-gray-50">
    <div class="container mx-auto px-6">
        <h3 class="text-4xl font-bold text-center mb-16 text-gray-800">Why Choose Us?</h3>
        <div class="grid md:grid-cols-3 gap-10">
            <div class="bg-white p-8 rounded-2xl shadow-md hover:shadow-2xl transition transform hover:-translate-y-2">

                <h4 class="text-2xl font-semibold mb-4 text-[#661F1F]">State-of-the-Art Equipment</h4>
                <p class="text-gray-600">Train with modern machines and tools built for results.</p>
            </div>
            <div class="bg-white p-8 rounded-2xl shadow-md hover:shadow-2xl transition transform hover:-translate-y-2">
                <h4 class="text-2xl font-semibold mb-4 text-[#661F1F]">Professional Coaches</h4>
                <p class="text-gray-600">Get guidance from certified trainers who push you to succeed.</p>

            </div>
            <div class="bg-white p-8 rounded-2xl shadow-md hover:shadow-2xl transition transform hover:-translate-y-2">
                <h4 class="text-2xl font-semibold mb-4 text-[#661F1F]">Supportive Community</h4>
                <p class="text-gray-600">Join a family of fitness enthusiasts who motivate each other daily.</p>
            </div>
        </div>
    </div>
</section>


<footer id="contact" class="bg-gray-900 text-gray-300 py-8 mt-10">
    <div class="container mx-auto text-center space-y-2">
        <p class="font-semibold">Contact Us: deanronquillo66@gmail.com .</p>
        <p class="font-semibold">&copy; 2025 Power Gym.  All rights reserved.</p>

    </div>
</footer>
